<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".certificate.ManageCertificateActivity"
    android:orientation="vertical"
    android:padding="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/etCertificate"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:ems="10"
            android:background="@drawable/custom_edit_text"
            android:hint="Certificate"
            android:inputType="text"
            android:textSize="15sp"
            android:paddingHorizontal="12dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_certificate"
            android:drawablePadding="12dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Add"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="@color/blue"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnExport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export certificates"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:backgroundTint="@color/green"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvCertificate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>